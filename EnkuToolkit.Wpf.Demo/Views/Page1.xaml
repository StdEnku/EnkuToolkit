<Page x:Class="EnkuToolkit.Wpf.Demo.Views.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EnkuToolkit.Wpf.Demo.Views"
      xmlns:vm="clr-namespace:EnkuToolkit.Wpf.Demo.ViewModels"
      xmlns:et="https://github.com/StdEnku/EnkuToolkit"
      DataContext="{et:ViewModelProvider vm:Page1ViewModel}"
      d:DataContext="{d:DesignInstance vm:Page1ViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <StackPanel VerticalAlignment="Center">
        <TextBox Text="{Binding Text}" Margin="20" />
        <Button Content="Next page" Command="{Binding NextPageCommand}" Margin="20" />
    </StackPanel>
</Page>
