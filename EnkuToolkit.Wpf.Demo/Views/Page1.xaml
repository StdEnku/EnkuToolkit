<Page x:Class="EnkuToolkit.Wpf.Demo.Views.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EnkuToolkit.Wpf.Demo.Views"
      xmlns:vm="clr-namespace:EnkuToolkit.Wpf.Demo.ViewModels"
      DataContext="{x:Static vm:ViewModels.Page1ViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="0">
            <Label Content="{Binding TitleText}" />
        </Viewbox>

        <Button Content="to Page2" Command="{Binding ClickedCommand}" Margin="10" Grid.Row="1" />
    </Grid>
</Page>
