<Page x:Class="EnkuToolkit.Wpf.Demo.Views.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EnkuToolkit.Wpf.Demo.Views"
      xmlns:vm="clr-namespace:EnkuToolkit.Wpf.Demo.ViewModels"
      DataContext="{x:Static vm:ViewModels.Page2ViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="0">
            <Label Content="{Binding TitleText}" />
        </Viewbox>

        <Button Content="Show Msg Box" Command="{Binding ShowMessageBoxCommand}" Margin="10" Grid.Row="1" />
        <Button Content="go back" Command="{Binding ClickedCommand}" Margin="10" Grid.Row="2" />
    </Grid>
</Page>
