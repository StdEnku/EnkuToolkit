<et:CustomTitlebarWindow x:Class="EnkuToolkit.Wpf.Demo.HogeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:et="https://github.com/StdEnku/EnkuToolkit/Wpf/Controls"
        xmlns:local="clr-namespace:EnkuToolkit.Wpf.Demo"
        mc:Ignorable="d"
        Title="HogeWindow" Height="450" Width="800">

    <et:CustomTitlebarWindow.Titlebar>
        <Border Background="Red" Height="50">
            <UniformGrid Columns="2">
                <Label Content="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Path=Title}" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="_" Width="50" WindowChrome.IsHitTestVisibleInChrome="True" />
                    <Button Content="□" Width="50" WindowChrome.IsHitTestVisibleInChrome="True" />
                    <Button Content="×" Width="50" WindowChrome.IsHitTestVisibleInChrome="True" Click="Button_Click" />
                </StackPanel>
            </UniformGrid>
        </Border>
    </et:CustomTitlebarWindow.Titlebar>

    <Viewbox>
        <Label Content="Hoge" />
    </Viewbox>
</et:CustomTitlebarWindow>
